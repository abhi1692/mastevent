    <link rel="stylesheet" type="text/css" href="css/mystyle.css">

    <div align="center">
    <h2>Join this Event</h2>
    </div>
    <body>
        <div align="center">
          <form method='post' action='/event_apply'>
            <table border="0" cellpadding="0" cellspacing="0">

                  <tr>
                    <td width="100">Email:</td>
                    <td><input type="text" name="email" /></td><br>
                  </tr>

                  <tr>
                    <td width="100">Phone Number:</td>
                    <td><input type="text" name="phone_no" /></td><br>
                  </tr>
                      
                    <tr>
                        <td width="100">Address:</td>
                        <td><input type="text" name="address" /></td><br>        
                    </tr>

        
                    <tr>
                        <td width="100">Event Exprience*<br>(Number of Events you have Done) :</td>
                                
                        <td>
                            <select name="event_exp">
                                <option value="0">0</option>
                                <option value="less than 5">less than 5</option>
                                <option value="less than 10">less than 10</option>
                                <option value="greater than 10">greater than 10</option>
                                <br><br>
                            </select>
                            
                           
                        </td>

                    </tr> 
                    

        
                    <tr>
                        <td width="100">Preferred Location*:</td>
                        <td><input type="text" name="preferred_location" /></td>
                    </tr>   
                    

                    <tr>
                        <td width="100">Suitable Day*:</td>
                        <td>
                            <div style="overflow: auto; width: 160px; height: 100px; border: 1px solid #336699;padding-left: 5px"> 
    
                                <input type="checkbox" name="suitable_day[]" value="Monday"> Monday<br>
                                <input type="checkbox" name="suitable_day[]" value="Tuesday"> Tuesday<br>
                                <input type="checkbox" name="suitable_day[]" value="Wednesday"> Wednesday<br>
                                <input type="checkbox" name="suitable_day[]" value="Thursday"> Thursday<br>
                                <input type="checkbox" name="suitable_day[]" value="Friday"> Friday<br>
                                <input type="checkbox" name="suitable_day[]" value="Saturday">Saturday<br>
                                <input type="checkbox" name="suitable_day[]" value="Sunday">Sunday<br>
            
                            </div>
                            <br><br>      
                        </td> 
                    </tr>   
                
        
                    <tr>
                        <td width="100">Suitable Time*:</td>
                        <td>
                            From:<input type="time" name="suitable_time_from" >
                                
                            To:<input type="time" name="suitable_time_to" >
                                
                                <br><br>      
                        </td>
                    </tr>       
                
        
                    <tr>
                        <td width*="100">Do You Have Bike:</td>
                        <td>
                            <input type="radio" name="vehicle" value="1">Yes 
                            <input type="radio" name="vehicle" value="0">No 
                             <br><br>
                        </td>
                    </tr>
        
                    <tr>
                        <td width="100">Qualification*:</td>
                        <td>
                            <div style="overflow: auto; width: 160px; height: 100px; border: 1px solid #336699;padding-left: 5px"> 
                                <input type="checkbox" name="qualification[]" value="10"> 10th<br>
                                <input type="checkbox" name="qualification[]" value="12"> 12th<br>
                                <input type="checkbox" name="qualification[]" value="graduation_in_progress"> Graduation In Progress<br>
                                <input type="checkbox" name="qualification[]" value="graduation_completed"> Graduation Completed<br>
                            </div>      
                        <br>
                        </td> 
                    </tr>

                  <tr>
                    <td width="100">More Detail:</td>

                    <td><input type="text" name="more_details" /></td>

                  </tr>

                  <tr></td width="100">
                    <input type="submit" value="Join" />
                  </td> </tr>
            </table>
            </form>

    </div>
    </body>