
<title>Post An Event</title>
  
<div class="container">
           
            
            <header>
                <h1>Post An Event</h1>
            </header>  
        <form method='post' action='/event/save' class="register">
      <div  class="form">
            <form id="contactform"> 
                <p class="contact"><label for="name">Name Of Event or Activity</label></p> 
                <input id="name" name="" placeholder="for ex. Times Of India Corporate event" required="" tabindex="1" type="text"> 
                 
            <select class="select-style gender" name="">
            <option value="select">You Need..</option>
            <option value="m">Male Volunteer</option>
            <option value="f">Female Volunteers</option>
             <option value="f">Coordinator</option>
            </select><br><br>

            <p class="contact"><label for="phone">Payment Per Day</label></p> 
            <input id="phone" name="" placeholder="Payment You give to volunteers ..." required="" type="text"> <br>  
                

            
            <p class="contact"><label for="phone">Volunteers Needed</label></p> 
            <input id="phone" name="" placeholder="total number of volunteers needed for the activity ..." required="" type="text"> <br>





             <p class="contact"><label for="phone">Enter Location</label></p> 
            <input id="phone" name="preferred_location" placeholder="area of activity..." required="" type="text"> <br>

            <p class="contact"><label for="email">Activity Address</label></p> 
            <textarea cols="50" rows="2" id="email" name="" placeholder="where the activity going to happen(specify complete address)..." required="" type="text"></textarea> 


            <p class="contact"><label for="email">City</label></p> 
            <input id="email" name="" placeholder="In Which City activity going to happen..." required="" type="text"> 

           
               
                
        
               <fieldset>
                 <label>Date Of Event/Activity</label><br>
                  <label class="month"> 
                  <select class="select-style" name="">
                  <option value="">Month</option>
                  <option  value="01">January</option>
                  <option value="02">February</option>
                  <option value="03" >March</option>
                  <option value="04">April</option>
                  <option value="05">May</option>
                  <option value="06">June</option>
                  <option value="07">July</option>
                  <option value="08">August</option>
                  <option value="09">September</option>
                  <option value="10">October</option>
                  <option value="11">November</option>
                  <option value="12" >December</option>
                  </label>
                 </select>    
                <label>Day<input class="birthday" maxlength="2" name=""  placeholder="Day" required=""></label>
                <label>Year <input class="birthyear" maxlength="4" name="" placeholder="Year" required=""></label>
              </fieldset>
  
            <p class="contact"><label for="phone">Total Days Of Activity</label></p> 
            <input id="phone" name="" placeholder="for ex. 1,3,5 ..." required="" type="text"> <br>

            
            <p class="contact"><label for="phone">Mobile Number</label></p> 
            <input id="phone" name="" placeholder="give your number so that coordinator/volunteer will contact you..." required="" type="text"> <br>

            <p class="contact"><label for="phone">Alternate Mobile Number</label></p> 
            <input id="phone" name="" placeholder="Please Give another number..." required="" type="text"> <br>

            
            

            <select class="select-style gender" name="vehicle">
            <option value="select">Need Volunteers who have bike...</option>
            <option value="">Yes</option>
            <option value="">No</option>
            <option value="">Not Necessary</option>
            </select><br><br>


            <p class="contact"><label for="email">Description</label></p> 
            <textarea cols="50" rows="4" id="email" name="" placeholder="a brief description about event or activity , specify something like you are providing pick and drop or lunch..." required="" type="text" ></textarea> 

             




            <input class="buttom" name="submit" id="submit" value="Submit" type="submit">      
   </form> 
</div>      
</div>

</form>
