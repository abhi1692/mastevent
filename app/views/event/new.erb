
<title>Post An Event</title>
  
<div class="container">
           
            
            <header>
                <h1>Post An Event</h1>
            </header>  
        <form method='post' action='/event/save/<%=params[:id]%>' class="register">
      <div  class="form">
            <form id="contactform"> 
                <p class="contact"><label for="name">Name Of Event or Activity</label></p> 
                <input id="name" name="event_name" placeholder="for ex. Times Of India Corporate event" required="" tabindex="1" type="text" value="<%=@event.present? ? @event.event_name : ""%>">

             <p class="contact"><label for="phone">You Need</label></p>
            <select class="select-style gender" name="volunteer_type">
              <% Event.volunteer_types.each do |key, val| %>
                <option value=<%=val%> <%=@event.present? && @event.volunteer_type == key ? "selected" : ""%>><%=key%></option>
              <%end%>
            </select><br><br>

            <p class="contact"><label for="phone">Payment Per Day</label></p> 
            <input id="phone" name="pay_per_day" placeholder="Payment You give to volunteers ..." required="" type="text" value=<%=@event.present? ? @event.pay_per_day : ""%> > <br>
                

            
            <p class="contact"><label for="phone">Volunteers Needed</label></p> 
            <input id="phone" name="coordinator_required" placeholder="total number of volunteers needed for the activity ..." required="" type="text" value=<%=@event.present? ? @event.coordinator_required : ""%>> <br>





             <p class="contact"><label for="phone">Enter Location</label></p> 
            <input id="phone" name="location" placeholder="area of activity..." required="" type="text" value="<%= @event.present? ? @event.location : ""%>"> <br>

            <p class="contact"><label for="email">Activity Address</label></p> 
            <textarea cols="50" rows="2" id="email" name="address" placeholder="where the activity going to happen(specify complete address)..." required="" type="text">
              <%=@event.present? ? @event.address : ""%>
            </textarea>

              <%splitted_event_date = @event.present? ? @event.event_start_date.to_s.split('-') : [] #yyyy-mm-dd%>
               <fieldset>
                 <label>Date Of Event/Activity</label><br>
                  <label class="month">
                  <select class="select-style" name="date_of_event[]">
                    <option value="">Month</option>
                    <%Event::MONTH_MAP.each do |key, val| %>
                        <option value=<%=key%> <%=key.to_i == splitted_event_date[1].to_i ? 'selected': ''%> ><%=val.titlecase%></option>
                    <%end%>
                  </label>
                 </select>    
                <label>Day<input class="birthday" maxlength="2" name="date_of_event[]"  placeholder="Day" required="" type="text" value="<%=splitted_event_date[2]%>"></label>
                <label>Year <input class="birthyear" maxlength="4" name="date_of_event[]" placeholder="Year" required="" type="text" value="<%=splitted_event_date[0]%>"></label>
              </fieldset>
  
            <p class="contact"><label for="phone">Total Days Of Activity</label></p> 
            <input id="phone" name="number_of_days" placeholder="for ex. 1,3,5 ..." required="" type="text" value="<%=@event.present? ? @event.number_of_days : ""%>"> <br>

         <!--
            <p class="contact"><label for="phone">Mobile Number</label></p> 
            <input id="phone" name="mobile_number" placeholder="give your number so that coordinator/volunteer will contact you..." required="" type="text"> <br>

            <p class="contact"><label for="phone">Alternate Mobile Number</label></p> 
            <input id="phone" name="alternate_number" placeholder="Please Give another number..." required="" type="text"> <br>
          -->



             <p class="contact"><label for="email">Need Volunteers who have bike...</label></p>
            <select class="select-style gender" name="bike">
              <%Event.bikes.each do |key, val| %>
                  <option value="<%=val%>" <%=(@event.present? && @event.bike==key) ? "selected": ""%>><%=key.titlecase%></option>
               <%end%>
            </select><br><br>


            <p class="contact"><label for="email">Description</label></p> 
            <textarea cols="50" rows="4" id="email" name="description" placeholder="a brief description about event or activity , specify something like you are providing pick and drop or lunch..." required="" type="text">
              <%=@event.present? ? @event.description : ""%>
            </textarea>


            <input class="buttom" name="submit" id="submit" value="Save" type="submit">
   </form>


</div> 

<center><em><strong><p>Note:</strong> </em>If You Want to see your event go to the Home page</p> </center>     
</div>

</form>
